<meta charset = "UTF-8">

<script>
	//Funções de manipulação de arrays
	/*
		concat(parametro): junta dois ou mais vetores a um vetor que invoa a função
		exemplo:
			var vetor1 = new Array(1, 2, 3);
			var vetor2 = new Array(4, 5, 6);
			var resultado = vetor1.concat(vetor2);

		indexOf(): recebe como parametro um valor a ser localizado no array e retorna,
		caso ele seja encontrado, a sua posição na lista.
		exemplo:
			var vetor1 = new Array (1, 2, 3, 4, 5);
			var indice = vator1.indexOf();

		join(): pode ser chama de duas formas: nao informando os parametros e o rotorno é
		uma string contendo todos os elementos do vetor separados por virgula. Ou informando 
		o texto para servir como separador, e o retorno é semelhante à primeira forma, mas
		no lugar das vírgulas é exibido o separador indicado.
		exemplo: 
			var vetor1 = new Array (1, 2, 3, 4, 5);
			var elementos = vetor1.join("a");
			document.write(elementos);

		push(): é usado para adicionar um ou vários elementos, recebidos como parâmetro, no 
		final do vetor que o invoca
		exemplo:
			var vetor1 = new Array(1, 2, 3, 2, 7);
			vetor1.push(9, 5);
			document.write(vetor1);

		reverse(): reverte os elementos de um vetor fazendo com que o último se torne o 
		primeiro, o primeiro se torne o último e os intermediários sigam a mesma lógica.
		exemplo: 
			var vetor1 = new Array(1, 2, 3, 4, 5);
			vetor1.reverse();
			document.write(vetor1);

		sort(): ordena os elementos do vetor de forma crescente.
		exemplo:
			var vetor1 = new Array(3, 2, 1, 5, 4);
			vetor1.sort();

	*/
	alert("Funções de manipulação de arrays");

	document.write("concat() "+"<br>");

	var vetor1 = new Array(1, 2, 3);
	var vetor2 = new Array(4, 5, 6);
	var vetor3 = new Array(7, 8, 9);
	var result = vetor1.concat(vetor2, vetor3);
	document.write(result + "<br><br>");

	document.write("indexOf <br>");
	var vetor4 = new Array(1, 2, 3, 4, 5);
	var indice = vetor4.indexOf(3);
	document.write(indice + "<br><br>");

	document.write("join"+"<br>");
	var vetor5 = new Array(1, 2, 3, 4, 5);
	var elementos = vetor5.join(" - ");
	document.write(elementos + "<br><br>");

	document.write("push" + "<br>");
	var vetor6 = new Array(1, 2, 3, 2, 7);
	vetor6.push(9, 5);
	document.write(vetor6 + "<br><br>");

	document.write("reverse" + "<br>");
	var vetor7 = new Array(1, 2, 3, 4, 5);
	vetor7.reverse();
	document.write(vetor7 + "<br><br>");

	document.write("sort" + "<br>");
	var vetor8 = new Array(3, 2, 1, 5, 4);
	vetor8.sort();
	document.write(vetor8 + "<br><br>");

		</script>
