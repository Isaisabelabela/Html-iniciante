<meta charset = "UTF-8">

<script>
	alert("Analisador de números! ");
	var num = +prompt("Digite um número: ");

	if (num > 0) {
		if (num % 2 == 0) {
			document.write("Esse número é positivo e par");
		}else{
			document.write("Esse número é positivo e ímpar");
		}
	}else{
		document.write("Esse número é negativo!");
	}


	</script>
