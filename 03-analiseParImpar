<meta charset = "UTF-8">

<script>
	//Estrutura de repetição for

	alert("Analisador de numeros");
	
	for(var i = 1; i < 6; i++){
		var num = +prompt("Digite o número: ");
		if(num > 0){
			document.write(num + " é positivo!" + "<br>");
		}else{
			document.write(num + " é negativo!" + "<br>");
		}
	}

	</script>
